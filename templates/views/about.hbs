    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap');

        html,
        body {
            user-select: none;
            width: 100%;
            height: 100%;
            text-align: center;
            background: rgba(255, 255, 255, 0.5);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-family: 'Poppins', sans-serif;
            color: white;
            background: linear-gradient(45deg, white, gray);
        }

        .container {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        .card {
            border-radius: 40px;
            align-items: center;
            width: 400px;
            height: 500px;
            margin: 20px;
            transition: 0.3s;
            transition-delay: 0s;
            cursor:grab;
        }

        .card:hover {
            transform: scale(1.1);
            transition: 0.3s;
            transition-delay: 0s;
        }

        .card:nth-child(1) {
            background: linear-gradient(45deg, #3503ad, #f7308c);
        }

        .card:nth-child(2) {
            background: linear-gradient(45deg, #ccff00, #09afff);
        }

        .card-body {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card-body img {
            margin-bottom: 30px;
            border-radius: 40px;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            border-top-left-radius: 20px;
            border-bottom-left-radius: 20px;
            width: 50%;
            height: 100%;
            z-index: 4;
            background: rgba(255, 255, 255, 0.15);

        }

        .card-header {
            font-size: 1.5em;
            font-weight: bolder;
            text-align: center;
            box-shadow: 0px 2px 2px 4px rgba(255, 255, 255, 0.4);
            border-radius: 50px;
            z-index: 1;
            letter-spacing: 2px;
        }

        .card-body {
            z-index: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }


        .card-title {
            position: relative;
            font-size: 2em;
            text-transform: uppercase;
        }

        .card span {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 0;
            top: 0;
            left: 0;
            border-radius: 20px;
        }

        .card:nth-child(1) span {

            background: linear-gradient(45deg, #3503ad, #f7308c);
        }

        .card:nth-child(2) span {


            background: linear-gradient(45deg, #ccff00, #09afff);
        }

        .card span:nth-child(1) {
            filter: blur(5px);
        }

        .card span:nth-child(2) {
            filter: blur(20px);
            opacity: 0.8;
        }

        .card span:nth-child(3) {
            filter: blur(35px);
            opacity: 0.6;
        }


        .card span:nth-child(4) {
            filter: blur(40px);
            opacity: 0.4;
        }

        .newimg {
            z-index: 10;
            position: absolute;
            top: 60%;
        }
    </style>
</head>

